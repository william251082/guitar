<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
        <field name="ordering"/>
        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="title" type="text" filter="raw" required="true" label="COM_TODOLIST_FORM_LBL_ITEM_TASK" description="COM_TODOLIST_FORM_DESC_ITEM_TASK" hint="COM_TODOLIST_FORM_LBL_ITEM_TASK"/>
        <field name="description" type="textarea" label="COM_TODOLIST_FORM_LBL_ITEM_DESCRIPTION" description="COM_TODOLIST_FORM_DESC_ITEM_DESCRIPTION" hint="COM_TODOLIST_FORM_LBL_ITEM_DESCRIPTION"/>
        <field name="status" type="radio" default="0" label="COM_TODOLIST_FORM_LBL_ITEM_COMPLETED" description="COM_TODOLIST_FORM_DESC_ITEM_COMPLETED" hint="COM_TODOLIST_FORM_LBL_ITEM_COMPLETED">
            <option value="0">COM_TODOLIST_ITEMS_COMPLETED_OPTION_0</option>
            <option value="1">COM_TODOLIST_ITEMS_COMPLETED_OPTION_1</option>
        </field>
        <field name="catid" type="category" extension="com_todolist" required="true" label="COM_TODOLIST_FORM_LBL_ITEM_CATID" description="COM_TODOLIST_FORM_DESC_ITEM_CATID" hint="COM_TODOLIST_FORM_LBL_ITEM_CATID"/>
    </fieldset>
</form>
