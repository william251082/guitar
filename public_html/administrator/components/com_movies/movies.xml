<extension type="component" version="3.0" method="upgrade">
    <name>com_movies</name>
    <creationDate>2018-07-17</creationDate>
    <copyright>2018 com_movies</copyright>
    <license>Proprietary License; For my customers only</license>
    <author>com_movies</author>
    <authorEmail>williamdelrosario@yahoo.com</authorEmail>
    <authorUrl>http://guitarsessions.joomla.com</authorUrl>
    <version>CVS: 1.0.1</version>
    <description>Movies!</description>
    
    <scriptfile>script.php</scriptfile>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>movies.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_movies" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="site/languages">
        
			<language tag="en-GB">en-GB/en-GB.com_movies.ini</language>
    </languages>
    <administration>
        <menu>COM_MOVIES</menu>
        <submenu>
            
			<menu link="option=com_movies&amp;view=movies" view="movies" alt="Movies/Movies">COM_MOVIES_TITLE_MOVIES</menu>

			<menu link="option=com_categories&amp;extension=com_movies.movies" view="categories" alt="Movies/Categories">COM_MOVIES_MOVIES_CATID</menu>

			<menu link="option=com_movies&amp;view=directors" view="directors" alt="Movies/Directors">COM_MOVIES_TITLE_DIRECTORS</menu>

			<menu link="option=com_movies&amp;view=tests" view="tests" alt="Movies/Tests">COM_MOVIES_TITLE_TESTS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>movies.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator/languages">
            
			<language tag="en-GB">en-GB/en-GB.com_movies.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_movies.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
        <plugin group="search" plugin="movies"/>
    </plugins>
    <modules>
		<module module="mod_movies" />
	</modules>
</extension>
