<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_MOVIES_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_MOVIES_FILTER_STATE"
               description="COM_MOVIES_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="release_date.from" label="COM_MOVIES_MOVIES_RELEASE_DATE_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_MOVIES_MOVIES_RELEASE_DATE_FILTER_FROM"/>
<field name="release_date.to" label="COM_MOVIES_MOVIES_RELEASE_DATE_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_MOVIES_MOVIES_RELEASE_DATE_FILTER_TO"/>
<field name="rating" label="COM_MOVIES_FORM_LBL_MOVIE_RATING" type="list" onchange="this.form.submit();" default="COM_MOVIES_MOVIES_RATING_FILTER">
  <option value="">COM_MOVIES_MOVIES_RATING_FILTER</option>
  <option value="1">COM_MOVIES_MOVIES_RATING_OPTION_1</option>
  <option value="2">COM_MOVIES_MOVIES_RATING_OPTION_2</option>
  <option value="3">COM_MOVIES_MOVIES_RATING_OPTION_3</option>
  <option value="4">COM_MOVIES_MOVIES_RATING_OPTION_4</option>
  <option value="5">COM_MOVIES_MOVIES_RATING_OPTION_5</option>
  <option value="">COM_MOVIES_MOVIES_RATING_OPTION_</option>
</field>
<field name="director" type="sql" label="COM_MOVIES_FORM_LBL_MOVIE_DIRECTOR" query="SELECT '' AS `id`, 'COM_MOVIES_MOVIES_DIRECTOR_FILTER' AS `val` UNION SELECT `id` AS `id`, `name` AS val FROM `#__movies_directors`" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>
<field name="catid" label="COM_MOVIES_FORM_LBL_MOVIE_CATID" type="category" extension="com_movies.movies" onchange="this.form.submit();" default="">
  <option value=""/>
  <option value="">JOPTION_SELECT_CATEGORY</option>
</field>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`title` ASC">Title Ascending</option><option value="a.`title` DESC">Title Descending</option><option value="a.`release_date` ASC">Release Dates Ascending</option><option value="a.`release_date` DESC">Release Dates Descending</option><option value="a.`rating` ASC">Ratings Ascending</option><option value="a.`rating` DESC">Ratings Descending</option><option value="a.`starring` ASC">Starrings Ascending</option><option value="a.`starring` DESC">Starrings Descending</option><option value="a.`director` ASC">Directors Ascending</option><option value="a.`director` DESC">Directors Descending</option><option value="a.`catid` ASC">Category Ascending</option><option value="a.`catid` DESC">Category Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>