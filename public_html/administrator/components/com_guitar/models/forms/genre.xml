<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_GUITAR_FORM_LBL_GENRE_CREATED_BY" description="COM_GUITAR_FORM_DESC_GENRE_CREATED_BY" hidden="true" hint="COM_GUITAR_FORM_LBL_GENRE_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_GUITAR_FORM_LBL_GENRE_MODIFIED_BY" description="COM_GUITAR_FORM_DESC_GENRE_MODIFIED_BY" hidden="true" hint="COM_GUITAR_FORM_LBL_GENRE_MODIFIED_BY"/>
    <field name="name" filter="safehtml" type="text" required="true" label="COM_GUITAR_FORM_LBL_GENRE_NAME" description="COM_GUITAR_FORM_DESC_GENRE_NAME" hint="COM_GUITAR_FORM_LBL_GENRE_NAME"/>
    <field name="description" editor="|" buttons="false" filter="JComponentHelper::filterText" type="editor" label="COM_GUITAR_FORM_LBL_GENRE_DESCRIPTION" description="COM_GUITAR_FORM_DESC_GENRE_DESCRIPTION" hint="COM_GUITAR_FORM_LBL_GENRE_DESCRIPTION"/>
    <field name="songs" type="foreignkey" label="COM_GUITAR_FORM_LBL_GENRE_SONGS" description="COM_GUITAR_FORM_DESC_GENRE_SONGS" class="inputbox" input_type="list" table="#__guitar_songs" key_field="id" value_field="title" required="true" message="Please select a Song" default=""/>
    <field name="guitarists" type="foreignkey" label="COM_GUITAR_FORM_LBL_GENRE_GUITARISTS" description="COM_GUITAR_FORM_DESC_GENRE_GUITARISTS" class="inputbox" input_type="list" table="#__guitar_guitarists" key_field="id" value_field="name" default="0"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
  <fieldset name="accesscontrol">
    <field name="asset_id" type="hidden" filter="unset"/>
    <field name="rules" type="rules" label="JFIELD_RULES_LABEL" translate_label="false" filter="rules" validate="rules" class="inputbox" component="com_guitar" section="genre"/>
  </fieldset>
</form>
