<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_GUITAR_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_GUITAR_FILTER_STATE"
               description="COM_GUITAR_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="group" type="sql" label="COM_GUITAR_FORM_LBL_TRANSACTION_GROUP" query="SELECT '' AS `id`, 'COM_GUITAR_TRANSACTIONS_GROUP_FILTER' AS `val` UNION SELECT `id` AS `id`, `name` AS val FROM `#__guitar_groups`" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`title` ASC">Titles Ascending</option><option value="a.`title` DESC">Titles Descending</option><option value="a.`description` ASC">Descriptions Ascending</option><option value="a.`description` DESC">Descriptions Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`group` ASC">Groups Ascending</option><option value="a.`group` DESC">Groups Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>