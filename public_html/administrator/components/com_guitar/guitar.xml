<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">

    <name>com_guitar</name>
    <description>COM_GUITAR_XML_DESCRIPTION</description>
    <creationDate>July 2018</creationDate>
    <author>William del Rosario</author>
    <license>Licenced</license>
    <version>1.0.0</version>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>guitar.php</filename>
        <filename>index.html</filename>
        <filename>controller.php</filename>
        <folder>views</folder>
        <folder>models</folder>
    </files>

    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_guitar.ini</language>
    </languages>

    <administration>
        <menu>com_guitar</menu>
        <submenu>
            <!--
                Note that all & must be escaped to &amp; for the file to be valid
                XML and be parsed by the installer
            -->
        </submenu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>controller.php</filename>
            <filename>guitar.php</filename>
            <filename>config.xml</filename>
            <filename>index.html</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_guitar.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_guitar.sys.ini</language>
        </languages>
    </administration>

</extension>

