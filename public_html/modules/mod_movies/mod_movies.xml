<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade" client="site">
    <name>MOD_MOVIES_NAME</name>
    <creationDate>2018-07-17</creationDate>
    <copyright>2018 com_movies</copyright>
    <license>Proprietary License; For my customers only</license>
    <author>com_movies</author>
    <authorEmail>williamdelrosario@yahoo.com</authorEmail>
    <authorUrl>http://guitarsessions.joomla.com</authorUrl>
    <version>CVS: 1.0.1</version>
    <description>MOD_MOVIES_DESCRIPTION</description>
    
    <files>
        <filename module="mod_movies">mod_movies.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        
			<language tag="en-GB">en-GB/en-GB.mod_movies.ini</language>
			<language tag="en-GB">en-GB/en-GB.mod_movies.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset 
                name="content_type" 
                label="MOD_MOVIES_CONTENT_TYPE_TAB_LBL"
                description="MOD_MOVIES_CONTENT_TYPE_TAB_DESC">
                <field
                    name="content_type" type="list"
                    label="MOD_MOVIES_CONTENT_TYPE_LBL"
                    description="MOD_MOVIES_CONTENT_TYPE_DESC">
                    <option value="blank">MOD_MOVIES_CUSTOM_CONTENT</option>
                    <option value="list">MOD_MOVIES_LIST</option>
                    <option value="item">MOD_MOVIES_ITEM</option>
                </field>
            </fieldset>
            <fieldset 
                name="blank_content" 
                label="MOD_MOVIES_CUSTOM_CONTENT_TAB_LBL"
                description="MOD_MOVIES_CUSTOM_CONTENT_TAB_DESC">
                <field 
                    name="html_content" type="editor" filter="safehtml"
                    label="MOD_MOVIES_HTML_LBL"
                    description="MOD_MOVIES_HTML_DESC" />
            </fieldset>
            <fieldset 
                name="list_content" 
                label="MOD_MOVIES_LIST_CONTENT_TAB_LBL"
                description="MOD_MOVIES_LIST_CONTENT_TAB_DESC">
                <field
                    name="table" type="list"
                    label="MOD_MOVIES_TABLE_LBL"
                    description="MOD_MOVIES_TABLE_DESC">
                    
	<option value="#__movies_movies">#__movies_movies</option>
	<option value="#__movies_directors">#__movies_directors</option>
                </field>
                <field 
                    name="field" type="groupedlist" default=""
                    label="MOD_MOVIES_FIELD_LBL"
                    description="MOD_MOVIES_FIELD_DESC">
                    
	<group label="#__movies_movies">
		<option value="id">id</option>
		<option value="created_by">created_by</option>
		<option value="modified_by">modified_by</option>
		<option value="title">title</option>
		<option value="description">description</option>
		<option value="release_date">release_date</option>
		<option value="rating">rating</option>
		<option value="review">review</option>
		<option value="awards">awards</option>
		<option value="starring">starring</option>
		<option value="director">director</option>
		<option value="catid">catid</option>
	</group>
	<group label="#__movies_directors">
		<option value="id">id</option>
		<option value="created_by">created_by</option>
		<option value="modified_by">modified_by</option>
		<option value="name">name</option>
	</group>
                </field>
                <field 
                    name="offset" type="text" default="0" filter="uint" class="input-small"
                    label="MOD_MOVIES_OFFSET_LBL"
                    description="MOD_MOVIES_OFFSET_DESC" />
                <field 
                    name="limit" type="text" default="10" filter="uint" class="input-small"
                    label="MOD_MOVIES_LIMIT_LBL"
                    description="MOD_MOVIES_LIMIT_DESC" />
            </fieldset>
            <fieldset 
                name="item_content" 
                label="MOD_MOVIES_ITEM_CONTENT_TAB"
                description="MOD_MOVIES_ITEM_CONTENT_TAB_DESC">
                <field
                    name="item_table" type="list"
                    label="MOD_MOVIES_TABLE_LBL"
                    description="MOD_MOVIES_TABLE_DESC">
                    
	<option value="#__movies_movies">#__movies_movies</option>
	<option value="#__movies_directors">#__movies_directors</option>
                </field>
                <field 
                    name="item_id" type="text" filter="uint" class="input-small"
                    label="MOD_MOVIES_ITEM_ID_LBL"
                    description="MOD_MOVIES_ITEM_ID_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>
